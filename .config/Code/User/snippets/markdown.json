	"Footnote": {
		"prefix": "ftn",
		"body": "[^$1] $0\n\n[^$1]: $2",
		"description": "Footnote entry"
	},

	"Image": {
		"prefix": "img",
		"body": "![$1]($2)${3:{width=${4:100%}}}$0",
		"description": "Insert an image."
	},

	"Weblink": {
		"prefix": "link",
		"body": "[$1]($2) $0",
		"description": "Link to an URL"
	},

	"Definition": {
		"prefix": "def",
		"body": "$1\n\n: $2\n\n$0",
		"description": "Simple definition."
	},

	"Asian Support": {
		"prefix": "asia",
		"body": "CJKmainfont: \"${1:Arial Unicode MS}\"",
		"description": "Use Unicode font for Asian characters."
	},
	"Font Awesome": {
		"prefix": "fa",
		"body": "\\fa$1{} $0",
		"description": "Enter Latex font awesome icon."
	},
	"Inline PlantUML": {
		"prefix": "puml",
		"body": "```{.plantuml caption=\"$1\"}$0\n```",
		"description": "Use inline PlantUML in Markdown codeblocks."
	}
